{
  "manifest_version": 3,
  "name": "SafePlay",
  "version": "1.0.0",
  "description": "A chrome extension to help with your portfolio. Not official financial advice.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8787/*",
    "https://*.fidelity.com/*",
    "https://*.sofi.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
